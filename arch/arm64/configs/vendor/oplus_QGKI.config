# Audio
CONFIG_OPLUS_FEATURE_MM_FEEDBACK=y

# Bluetooth
CONFIG_OPLUS_BT_BUG_STABILITY=y

# eMMC
CONFIG_EMMC_SDCARD_OPTIMIZE=y

# Filesystems
CONFIG_EXFAT_FS=y

# LEDs
CONFIG_LEDS_AW2023=y
CONFIG_LEDS_TRIGGERS=y

# Misc
CONFIG_SIM_DETECT=y

# Param
CONFIG_PARAM_READ_WRITE=y

# Platform
CONFIG_OPLUS_SYSTEM_KERNEL=y
CONFIG_OPLUS_SYSTEM_KERNEL_QCOM=y

# Sensors
CONFIG_OPLUS_SENSOR_FB_QC=y

# SoC
CONFIG_OEM_QMI=y
CONFIG_OPLUS_GPIO=y

# Stability
CONFIG_OPLUS_BUG_STABILITY_EFFECTON_QGKI=y
CONFIG_OPLUS_BUG_STABILITY=y

# UFS
# CONFIG_FS_HPB is not set
# CONFIG_SCSI_SKHPB is not set
# CONFIG_UFSHPB is not set
CONFIG_OPLUS_FEATURE_PADL_STATISTICS=y
CONFIG_OPLUS_UFS_DRIVER=y

# WiFi
CONFIG_IP_NF_TARGET_TTL=y
CONFIG_OPLUS_FEATURE_WIFI_BDF=y
CONFIG_OPLUS_FEATURE_WIFI_MAC=y
CONFIG_QCA_CLD_WLAN=m
